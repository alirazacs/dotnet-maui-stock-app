<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotnetTrainingStockApp.Views.StockItemDetailsPage"
             xmlns:viewmodel="clr-namespace:DotnetTrainingStockApp.ViewModels"
             x:DataType="viewmodel:StockItemDetailsViewModel"
             Shell.NavBarIsVisible="True"
             Title="StockItemDetailsPage">
    <VerticalStackLayout>
        <Label 
            Text="Some details"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image Source="{Binding Path}" HeightRequest="200" WidthRequest="200" />

        <ListView ItemsSource="{Binding Tags}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"
                                   Text="{Binding }"
                                   FontAttributes="Bold" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <Button
            x:Name="AddToCartBtn"
            Text="Add to cart" 
            SemanticProperties.Hint="Adds this item to the cart"
            Clicked="OnAddToCartBtnClicked"
            HorizontalOptions="Fill" />
        
    </VerticalStackLayout>
</ContentPage>