<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DotnetTrainingStockApp.Views.StockItemDetailsPage"
             xmlns:viewmodel="clr-namespace:DotnetTrainingStockApp.ViewModels"
             x:DataType="viewmodel:StockItemDetailsViewModel"
             Shell.NavBarIsVisible="True"
             Title="StockItemDetailsPage">
    <VerticalStackLayout>
        <Label 
            Text="Some details"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image Source="{Binding Path}" />

        <Button
            x:Name="AddToCartBtn"
            Text="Add to cart" 
            SemanticProperties.Hint="Adds this item to the cart"
            Clicked="OnAddToCartBtnClicked"
            HorizontalOptions="Fill" />
        
    </VerticalStackLayout>
</ContentPage>